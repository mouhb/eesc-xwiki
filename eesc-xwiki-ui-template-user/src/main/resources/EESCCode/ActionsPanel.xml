    <property>
      <content>{{velocity}}
#panelheader($services.localization.render('eesc.panel.actions.title'))
#set($discard = $xwiki.ssx.use('EESCCode.ActionsPanel'))

{{html}}
  &lt;div class="eesc-panel"&gt;
    &lt;span class="eesc-menu-header"&gt;$services.localization.render('eesc.panel.actions.header.current')&lt;/span&gt;
    &lt;ul&gt;
      #if(!$doc.isHidden() &amp;&amp; $doc.hasAccessLevel("edit"))
        &lt;li&gt;
          &lt;form action="$xwiki.getURL($doc, "edit")"&gt;
            &lt;input type="submit" value="$services.localization.render('eesc.panel.actions.button.edit')" class="button" /&gt; 
          &lt;/form&gt;
        &lt;/li&gt;
        #if($doc.hasAccessLevel("delete"))
          &lt;li&gt;
            &lt;form action="$xwiki.getURL($doc, "delete")"&gt;
              &lt;input type="submit" value="$services.localization.render('eesc.panel.actions.button.delete')" class="button" /&gt; 
            &lt;/form&gt;
          &lt;/li&gt;
        #end
      #else
        &lt;li&gt;$services.localization.render('eesc.panel.actions.noRights')&lt;/li&gt;
      #end
    &lt;/ul&gt;
    &lt;br /&gt;
    &lt;span class="eesc-menu-header"&gt;$services.localization.render('eesc.panel.actions.header.creation')&lt;/span&gt;
    &lt;ul&gt;
      &lt;li&gt;
        &lt;form method="GET" action="$xwiki.getURL('Main.WebHome', 'create')"&gt;
          &lt;input type="submit" class="button" value="$services.localization.render('eesc.panel.actions.button.create.document')" /&gt;
        &lt;/form&gt;
      &lt;/li&gt;
      &lt;li&gt;
        &lt;form method="GET" action="$xwiki.getURL('Main.WebHome', 'create')"&gt;
          &lt;input type="hidden" name="tocreate" value="space" /&gt;
          &lt;input type="submit" class="button" value="$services.localization.render('eesc.panel.actions.button.create.space')" /&gt;
        &lt;/form&gt;
      &lt;/li&gt;
    &lt;/ul&gt;
  &lt;/div&gt;
{{/html}}

#panelfooter()
{{/velocity}}</content>
