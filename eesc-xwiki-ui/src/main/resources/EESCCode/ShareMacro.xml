#*
 * Share macro
 * -----
 *
 * This macro displays the material to share a document
 *
 * Author: Fabio MANCINELLI &lt;fabio.mancinelli@xwiki.com&gt;
 *         Jean SIMARD &lt;jean.simard@xwiki.com&gt;
 *#
#macro(htmlsharedoc $spacename $documentname $rights $users $groups)
  #set($discard = $xwiki.jsx.use("EESCCode.ShareMacro"))
  #set($discard = $xwiki.ssx.use("EESCCode.ShareMacro"))
  #userPicker_import()
  #set($documentref = $services.model.resolveDocument("${spacename}.${documentname}"))
  #set($document = $xwiki.getDocument($documentref))
  #set($rightobjs = $document.getObjects("XWiki.XWikiRights"))
  #set($documentusers = "")
  #set($documentgroups = "")
  #if($rightobjs.size() &lt;= 0)
    #set($documentshare = 'public')
  #elseif($rightobjs.size() == 1)
    #set($documentshare = 'private')
  #elseif($rightobjs.size() == 2)
    #set($documentshare = 'public')
  #elseif($rightobjs.size() == 3)
    #set($documentshare = 'shared')
    #set($documentusers = $rightobjs.get(1).getProperty("users").value)
    #set($documentgroups = $rightobjs.get(2).getProperty("groups").value)
  #else
    #set($documentshare = 'public')
  #end
  ## If variables have been given as arguments ($rights, $users and $groups), then replace the previous values
  #if($rights)
    #set($documentshare = $rights)
  #end
  #if($users)
    #set($documentusers = '')
    #set($sep = '')
    #foreach($user in $users)
      #set($documentusers = "${documentusers}${sep}${user}")
      #set($sep = ',')
    #end
  #end
  #if($groups)
    #set($documentgroups = '')
    #set($sep = '')
    #foreach($group in $groups)
      #set($documentgroups = "${documentgroups}${sep}${group}")
      #set($sep = ',')
    #end
  #end
  &lt;div id="eesc-share"&gt;
    &lt;table id="eesc-share-choice"&gt;
      &lt;tr&gt;
        &lt;td&gt;
          &lt;input type="radio" name="rights" id="eesc-share-public" value="public" #if($documentshare.equals('public')) checked="checked" #end /&gt;
          ${services.localization.render('eesc.DocumentCreate.share.public')}
        &lt;/td&gt;
        &lt;td&gt;
          &lt;input type="radio" name="rights" id="eesc-share-shared" value="shared" #if($documentshare.equals('shared')) checked="checked" #end /&gt;
          ${services.localization.render('eesc.DocumentCreate.share.shared')}
        &lt;/td&gt;
        &lt;td&gt;
          &lt;input type="radio" name="rights" id="eesc-share-private" value="private" #if($documentshare.equals('private')) checked="checked" #end /&gt;
          ${services.localization.render('eesc.DocumentCreate.share.private')}
        &lt;/td&gt;
      &lt;/tr&gt;
    &lt;/table&gt;&lt;!-- "#eesc-share-choice" --&gt;
    &lt;div id="eesc-share-with"&gt;
      &lt;div id="eesc-share-with-users"&gt;
        &lt;span class="xHint"&gt;
          ${services.localization.render('eesc.DocumentCreate.hint.users')}
        &lt;/span&gt;
        &lt;input type="text" name="users" class="suggestUsers global multipleSelection" value="${documentusers}" /&gt;
      &lt;/div&gt;&lt;!-- "#eesc-share-with-users" --&gt;
      &lt;div id="eesc-share-with-groups"&gt;
        &lt;span class="xHint"&gt;
          ${services.localization.render('eesc.DocumentCreate.hint.users')}
        &lt;/span&gt;
        &lt;input type="text" name="groups" class="suggestGroups global multipleSelection" value="${documentgroups}" /&gt;
      &lt;/div&gt;&lt;!-- "#eesc-share-with-groups" --&gt;
    &lt;/div&gt;&lt;!-- "#eesc-share-with" --&gt;
  &lt;/div&gt;&lt;!-- "#eesc-share" --&gt;
#end
{{/velocity}}</content>
