      <content>{{velocity}}
#panelheader($services.localization.render('eesc.panel.actions.title'))

==== $services.localization.render('eesc.panel.actions.currentDocumentHeader')

#if(!$doc.name.equals("WebHome") &amp;&amp; $doc.hasAccessLevel("edit"))
  {{html}}
    &lt;form action="$xwiki.getURL($doc, "edit")"&gt;
      &lt;input type="submit" value="$services.localization.render('eesc.panel.actions.edit')" class="button"/&gt; 
    &lt;/form&gt;
    #if($doc.space != $context.user)
      &lt;form action="$xwiki.getURL("EESCCode.ShareWith")"&gt;
        &lt;input type="hidden" name="documentName" value="$doc.fullName"/&gt;
        &lt;input type="submit" value="$services.localization.render('eesc.panel.actions.shareWith')" class="button"/&gt;
      &lt;/form&gt;
    #end
  {{/html}}
#else
  $services.localization.render('eesc.panel.actions.noEditRights')
#end

==== $services.localization.render('eesc.panel.actions.createDocumentHeader')

{{html}}
  &lt;form action="$xwiki.getURL("EESCCode.CreateDocument")"&gt;
    &lt;input type="hidden" name="type" value="collaborative"/&gt;
    &lt;input type="hidden" name="spaceName" value="$doc.space"/&gt;
    &lt;input type="submit" value="$services.localization.render('eesc.panel.actions.createCollaborativeDocument')" class="button"/&gt;
  &lt;/form&gt;
  &lt;form action="$xwiki.getURL("EESCCode.CreateDocument")"&gt;
    &lt;input type="hidden" name="type" value="personal"/&gt;
    &lt;input type="submit" value="$services.localization.render('eesc.panel.actions.createPersonalDocument')" class="button"/&gt;
  &lt;/form&gt;
{{/html}}

#panelfooter()
{{/velocity}}

