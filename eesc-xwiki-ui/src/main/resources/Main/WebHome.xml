#*
 * Main webhome
 *  -----------
 *
 * This sheet presents all the spaces that a user can access.  This includes his own personal space and all of the spaces linked to the group he is in.
 *
 * Author: Jean SIMARD (jean.simard@xwiki.com)
 *#
##############################################
##                 GLOBALS
##############################################
## GLOBAL VARIABLES
#set($userId = $xcontext.getUser().replace('xwiki:', '').replace('XWiki.', ''))
#set($user = $services.eesc.getUser($userId))
#set($groupsForUser = $services.eesc.getGroupsForUser($userId))
##############################################
##                 LIST DOCUMENTS
##############################################
#set($query_select = "distinct doc.fullName")
#set($query_from = "XWikiDocument doc, BaseObject as oshare, BaseObject as oright, LargeStringProperty as pusers, LargeStringProperty as pgroups")
#set($query_where_share = "doc.fullName = oshare.name and oshare.className = 'EESCCode.CollaborativeDocumentClass' and doc.fullName &lt;&gt; 'EESCCode.CollaborativeDocumentTemplate'")
#set($query_where_right = "doc.fullName = oright.name and oright.className = 'XWiki.XWikiRights'")
#set($query_where_users = "pusers.id.id = oright.id and pusers.id.name = 'users' and pusers.value = '${xcontext.user}'")
#set($query_where_groups_values = "pgroups.value = 'XWiki.ENTAllGroup'")
#set($sep = ' or ')
#foreach($g in $groupsForUser)
  #set($query_where_groups_values = "${query_where_groups_values}${sep}pgroups.value = '${g.getId()}'")
#end
## For XWiki.Admin, '${query_where_groups_values}' is empty so it will result in the following
## $query_where_groups =&gt; "pgroups.id.id = oright.id and pgroups.id.name = 'groups'"
## which will list every document with this property (no matter what value is in it); hence, all collaborative documents will be listed.
#set($query_where_groups = "pgroups.id.id = oright.id and pgroups.id.name = 'groups'#if(${query_where_groups_values}!='') and ( ${query_where_groups_values} )#{end}")
#set($query_where = "${query_where_share} and ${query_where_right} and ( ( ${query_where_users} ) or ( ${query_where_groups} ) )")
#set($query = "select ${query_select} from ${query_from} where ${query_where}")
#set($results = $services.query.hql($query).addFilter('hidden').addFilter('unique').execute())
#set($viewabledocs = [])
## Filter documents the user has access to
#foreach($pagename in $results)
  #if($xwiki.checkAccess($pagename, 'view'))
    #set($discard = $viewabledocs.add($pagename))
  #end
#end
#set($lastspacename = '')
#if(!$viewabledocs.isEmpty())
  {{menu type="vertical collapsible open"}}## Add/remove 'open' to have the menu expanded/folded by default
    #foreach($pagename in $viewabledocs)
      #set($pagenameelements = $pagename.split('\.'))
      #set($spacename = $pagenameelements.get(0))
      #set($documentname = $pagenameelements.get(1))
      #if(!$spacename.equals($lastspacename))
        #if($foreach.count != 1)
          * ----
        #end
        * image:icon:folder ${spacename}
        #set($lastspacename = $spacename)
      #end
      ** [[image:icon:page ${documentname}&gt;&gt;${pagename}]]
    #end
    * ----
  {{/menu}}
#else
  {{info}}
    $services.localization.render('eesc.Documentshare.nodocument')
  {{/info}}
#end

{{/velocity}}</content>
