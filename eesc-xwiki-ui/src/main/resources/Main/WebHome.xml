##set($user = $services.eesc.getUser($userId))
##set($groupsForUser = $services.eesc.getGroupsForUser($userId))

##############################################
##                 LIST DOCUMENTS
##############################################
#set($query_select = "select distinct doc.fullName")
#set($query_from = "from XWikiDocument doc,  BaseObject as obj, StringListProperty as prop1, StringListProperty prop2")
#set($query_where_prop1 = "obj.id = prop1.id.id and prop1.id.name = 'users' and prop1.textValue like '%${xcontext.user}'")
#set($query_where_prop2 = "obj.id = prop2.id.id and prop2.id.name = 'groups' and prop2.textValue like '%XWiki.ENTAllGroup%'")
#set($query_where = "where doc.fullName = obj.name and obj.className = 'XWiki.XWikiRights' and ( ( ${query_where_prop1} ) or ( ${query_where_prop2} ) )")
#set($query = "${query_select} ${query_from} ${query_where}")
#set($results = $services.query.hql($query).addFilter('hidden').addFilter('unique').execute())
#set($lastspacename = '')
{{menu type="vertical collapsible"}}
#foreach($pagename in $results)
  #set($pagenameelements = $pagename.split('\.'))
  #set($spacename = $pagenameelements.get(0))
  #set($documentname = $pagenameelements.get(1))
  #if(!$spacename.equals($lastspacename))
    #if($foreach.count != 1)
      * ----
    #end
    * image:icon:folder ${spacename}
    #set($lastspacename = $spacename)
  #end
  ** [[image:icon:page ${documentname}&gt;&gt;${pagename}]]
#end
* ----
{{/menu}}
