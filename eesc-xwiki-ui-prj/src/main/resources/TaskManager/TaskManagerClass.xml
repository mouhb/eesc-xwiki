{{html wiki=true}}
#if($type == 'edit')
  #set($query = "from doc.object(TaskManager.TaskManagerClass) as task where doc.fullName &lt;&gt; 'TaskManager.TaskManagerTemplate' and doc.fullName &lt;&gt; '$doc.fullName' order by task.duedate")
